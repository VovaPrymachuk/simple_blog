<h1><%= @post.title %></h1>
<p><%= @post.body %></p>
<hr>
<%= link_to "Edit", edit_post_path(@post), class: "btn btn-outline-success" %>
<%= link_to "Delete", post_path(@post), method: :delete, data: {confirm: "Do you want to delete the post?"}, class: "btn btn-danger" %>
<hr>
<h2>Comments</h2>
<% @post.comments.each do |comment| %>
  <div class="alert alert-light">
    <p><strong><%= comment.username %></strong>: <%= comment.body %></p>
  </div>
<% end %>
<hr>
<h2>Add comments</h2>
<%= form_for([@post, @post.comments.build]) do |f| %>
  <p>
    User<br>
    <%= f.text_field(:username, {class: "form-control"}) %>
  </p>
  <p>
    Comments text<br>
    <%= f.text_area(:body, {class: "form-control"})%>
  </p>
  <p>
    <%= f.submit("Add comment", {class: "btn btn-primary btn-lg"}) %>
  </p>
<% end %>
